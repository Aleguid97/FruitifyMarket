@model IEnumerable<FrutifyMarket.Controllers.Ordini>

@{
    ViewBag.Title = "Index";
}

<link href="~/Content/Site.css" rel="stylesheet" />

<h2>Lista Ordini</h2>

<div class="table-responsive">
    <table class="table table-striped table-bordered mb-5">
        <thead class="thead-dark">
            <tr>
                <th>Nome</th>
                <th>Cognome</th>
                <th>Data</th>
                <th>Indirizzo</th>
                <th>Note</th>
                <th>Stato</th>
                <th>Totale</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Users.Nome)</td>
                    <td>@Html.DisplayFor(modelItem=> item.Users.Cognome)</td>
                    <td>@(item.Data.HasValue ? item.Data.Value.ToString("dd/MM/yyyy") : "")</td>
                    <td>@Html.DisplayFor(modelItem => item.Indirizzo)</td>
                    <td>@Html.DisplayFor(modelItem => item.Note)</td>
                    <td>@Html.DisplayFor(modelItem => item.Stato)</td>
                    <td>@Html.DisplayFor(modelItem => item.Totale)</td>
                    <td class="text-center align-middle">
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID_Ordine }, new { @class = "btn BtnCard2 me-5" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID_Ordine }, new { @class = "btn BtnCard3" })
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
