@model IEnumerable<FrutifyMarket.Controllers.Fornitori>

@{
    ViewBag.Title = "Index";
}

<h2>Lista Fornitori</h2>

<p>
    @Html.ActionLink("Aggiungi un nuovo fornitore", "Create", null, new { @class = "btn BtnCard1" })
</p>

<div class="table-responsive">
    <table class="table table-striped table-bordered mb-5">
        <thead class="thead-dark">
            <tr>
                <th>Ragione Sociale</th>
                <th>Partita IVA</th>
                <th>Città</th>
                <th>Indirizzo</th>
                <th>CAP</th>
                <th>Email</th>
                <th>Telefono</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.RagioneSociale)</td>
                    <td>@Html.DisplayFor(modelItem => item.PIVA)</td>
                    <td>@Html.DisplayFor(modelItem => item.Citta)</td>
                    <td>@Html.DisplayFor(modelItem => item.Indirizzo)</td>
                    <td>@Html.DisplayFor(modelItem => item.Cap)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.Tel)</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID_Fornitore }, new { @class = "btn BtnCard2 ms-4" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID_Fornitore }, new { @class = "btn BtnCard3" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
