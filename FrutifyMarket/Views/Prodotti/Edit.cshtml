        @model FrutifyMarket.Controllers.Prodotti

        @{
            ViewBag.Title = "Edit";
        }

       

<div>
    <h2>Modifica Prodotto</h2>
    <a href="@Url.Action("Index")" class="btn BtnCard2">Indietro</a>
</div>

        @using (Html.BeginForm("Edit", "Prodotti", FormMethod.Post, new { enctype = "multipart/form-data", @class = "row g-3" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ID_Prodotto)

                <div class="form-group">
                    @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2 mb-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Descrizione, htmlAttributes: new { @class = "control-label col-md-2 mt-b" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Descrizione, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Descrizione, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Prezzo, htmlAttributes: new { @class = "control-label col-md-2 mt-b" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Prezzo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Prezzo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Quantita_Disp, htmlAttributes: new { @class = "control-label col-md-2 mb-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Quantita_Disp, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Quantita_Disp, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.FK_ID_Fornitore, "FK_ID_Fornitore", htmlAttributes: new { @class = "control-label col-md-2 mb-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("FK_ID_Fornitore", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.FK_ID_Fornitore, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Aggiungi Immagine", htmlAttributes: new { @class = "control-label col-md-2 mb-2" })
                    <div class="col-md-5">
                        @Html.TextBox("file", "", new { type = "file", @class = "form-control" })
                        <p class="text-muted" style="margin-top:-20px">Formati supportati: JPG, PNG, GIF. Dimensione massima: 5MB.</p>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class=" btn BtnCard1" />
                    </div>
                </div>
            </div>
        }




        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
