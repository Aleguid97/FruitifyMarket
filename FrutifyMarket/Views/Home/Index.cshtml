@model IEnumerable<FrutifyMarket.Controllers.Prodotti>

@{
    var valoreOrdine = TempData["Ordine"] as string; // Puoi convertire il valore nel tipo appropriato
}

@if (TempData["LoginMessage"] != null)
{
    <div class="alert alert-success mb-5" id="LoginMessage" role="alert">
        @TempData["LoginMessage"]
    </div>

    <script>
        setTimeout(function () {
            var loginMessage = document.getElementById("LoginMessage");
            if (loginMessage) {
                loginMessage.style.display = "none";
            }
        }, 2000);
    </script>
}

@if (TempData["OrderConfirm"] != null)
{
    <div class="alert alert-success mb-5" role="alert">
        @TempData["OrderConfirm"]
    </div>
}

@if (TempData["LogoutMessage"] != null)
{
    <div id="logoutMessage" class="alert alert-success mb-5" role="alert">
        @TempData["LogoutMessage"]
    </div>

    <script>
        // Funzione per nascondere il messaggio dopo 2 secondi
        setTimeout(function () {
            var logoutMessage = document.getElementById("logoutMessage");
            if (logoutMessage) {
                logoutMessage.style.display = "none";
            }
        }, 2000);
    </script>
}

